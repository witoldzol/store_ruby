<!DOCTYPE html>
<html>
  <head>
    <title>Key-Chain Store</title>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>

  </head>
  <body>
    <!-- HEADER -->
    <div id="header">
    	
      </div>
  
      <!-- NAVBAR -->
      <div id="options">
        <div id="navbar">
          <ul>
            <li>
              <a href="/items">Products</a>
            </li>
          </ul>
        </div>
      </div>
  
      <!-- CONTENT -->
      <div id="wrapper">
        <div id="content">
          <p class="notice">
            <%= flash[:notice] %>
	    <!-- DEVISE flash notices -->
	    <p class="notice"><%= notice %></p>
	    <p class="alert"><%= alert %></p>
          </p>
          <%= yield %>
        </div>
        
        <!-- SIDE PANEL -->
        <div id="sideMenu">
          <div class="loginContainer">
            <h1 class="inputBox">Login</h1>
          </div>
          <div class="searchContainer">
            <h1 class="inputBox"></h1>
          </div>
        </div>
      </div>
  
      <!-- FOOTER -->
      <div id="footer">
        <h6 class="footerContent">
          &copy; Key Chain Shop &trade; 2018
        </h6>
      </div>
  </body>
</html>
