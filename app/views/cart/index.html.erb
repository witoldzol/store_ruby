<h1>Shopping Cart</h1>

<!-- Check if we have items in cart -->
<% if @cart.empty? %>
  <div class="empty-cart">Your cart has no items</div>
<% end %>

<% total = 0 %>

<div class="cart">


 <div class="container">
  <!-- loop through cart items -->
 <% @cart.each do |id, quantity| %>

  <% item = Item.find_by_id(id) %>


    <div class="item-line row">
	    <div class="item_line_image col-sm">
	      <%= link_to (image_tag item.image_url, :style => "height:60px"), item %>
	    </div>
	    <div class="item_line_title col-sm">
	      <%= number_to_currency(item.price) %>
	    </div>
	    <div class="item_line_quantity col-sm">
	      <%= quantity %>
	    </div>
	    <div class="item_line_price col-sm">
	      <%= number_to_currency(quantity * item.price, :unit => "EUR") %>
	    </div>
    </div>

    <div class="container">
  <div class="row">
    <div class="col-sm">
      One of three columns
    </div>
    <div class="col-sm">
      One of three columns
    </div>
    <div class="col-sm">
      One of three columns
    </div>
  </div>
    </div>
    
  <!-- calculate total -->
    <% total += quantity * item.price %>
 <% end %>
 </div>	  
  <div id="cart_total">Total: </div>
  <div id="total_output">
    <%= number_to_currency(total, :unit => "&euro;".html_safe) %>
  </div>

  <div id="continue_shopping">

    <%= link_to 'Continue Shopping', :controller => :items %>
  </div>
  
</div>


